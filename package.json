{
  "name": "micepy",
  "displayName": "MicePy",
  "description": "tbd",
  "publisher": "cayden",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "MicePy",
      "properties": {
        "micepy.checkOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Check for errors when a Python file is opened"
        },
        "micepy.checkOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Check for errors when a Python file is saved"
        },
        "micepy.useLocalData": {
          "type": "boolean",
          "default": false,
          "description": "Use local data for translations"
        }
      }
    },
    "commands": [
      {
        "command": "micepy.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "micepy.runPythonFile",
        "title": "Run Python File"
      },
      {
        "command": "micepy.translate",
        "title": "Translate"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "formdata-polyfill": "^4.0.10",
    "node-fetch": "^3.3.0"
  }
}
